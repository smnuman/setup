#!/bin/bash

docker-machine-env() {
  MACHINE_NAME="${1:-dinghy}"
  eval "$(docker-machine env "${MACHINE_NAME}")"
}

if which docker-machine >&-
then
  alias dm=docker-machine
  alias dme=docker-machine-env

  [[ $(docker-machine status dinghy) = "Running" ]] && docker-machine-env dinghy

  true
fi

